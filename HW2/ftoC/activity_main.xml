<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@android:color/holo_orange_light"
   android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingTop="@dimen/activity_vertical_margin"
   android:paddingRight="@dimen/activity_horizontal_margin"
   android:paddingBottom="@dimen/activity_vertical_margin"
   tools:context="com.example.sse.lect2_activitylifecycle_logging_savingstate.MainActivity">
   <Button
       android:id="@+id/btnCtoF"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="39dp"
       android:text="Celsius >> Fahrenheit" />
   <EditText
       android:id="@+id/txtC"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/btnCtoF"
       android:layout_marginTop="41dp"
       android:backgroundTint="@color/colorAccent"
       android:hint="Enter Celsius" />
   <EditText
       android:id="@+id/txtF"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/txtC"
       android:layout_alignParentEnd="true"
       android:autoText="false"
       android:hint="Enter Fahrenheit" />
   <Button
       android:id="@+id/btn_ftc"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="262dp"
       android:text="Fahrenheit >> CELSIUS" />
</RelativeLayout>
